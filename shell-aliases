# misc aliases
alias et='echo $RANDOM_THEME'
alias n='nvim'
alias l='ls -aX'
alias ff='find ~ -type f -name'
alias t='tree --gitignore --noreport'
alias e='exit'
alias gg='git grep -Iin'

# git aliases
